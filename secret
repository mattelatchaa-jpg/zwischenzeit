    frameborder="0" allow="autoplay"></iframe>

  <script>
    // Danh s√°ch c√¢u ch·ªØ (b·∫°n thay ·ªü ƒë√¢y)
    const messages = [
      "I'm ready. You ready?",
      "Chi·ªÅu t·ªëi nay m√¨nh g·∫∑p nhau ch·ª©?",
      " I love you and i love myself ‚ù§Ô∏è",
      "H√£y ch·ªù nhau ·ªü m·ªôt t∆∞∆°ng lai g·∫ßn, t·ªët ƒë·∫πp h∆°n, h·∫°nh ph√∫c h∆°n nh√© ‚ù§Ô∏è",
      "ƒê∆∞·ª£c nh√¨n th·∫•y ng∆∞·ªùi m√¨nh y√™u th∆∞∆°ng tin t∆∞·ªüng v√† kh√≥c tr∆∞·ªõc m·∫∑t m√¨nh c≈©ng l√† m·ªôt m√≥n qu√† üéÅ",
      "R·ªìi m√¨nh s·∫Ω s·ªõm g·∫∑p l·∫°i nhau",
      "H·∫πn t·∫πo n·ªØa m√¨nh g·∫∑p nhau nh√©"
      "T·∫•t c·∫£ ch√∫ng ta xu·∫•t hi·ªán trong cu·ªôc ƒë·ªùi nhau ƒë√£ l√† m·ªôt m√≥n qu√† r·ªìi",
      "c·∫£m ∆°n v√† s·∫Ω l√†m h·∫øt s·ª©c",
      "‚ù§Ô∏è M√¨nh lu√¥n bƒÉn khoƒÉn l√† bao gi·ªù m√¨nh c√≥ ng∆∞·ªùi y√™u? Ho√° ra l√† c√≥ ƒë·∫ßy ƒë√≥ m√† üòå",
    ];

    let i = 0; // index c√¢u
    let j = 0; // index k√Ω t·ª±
    let currentMessage = "";
    let isDeleting = false;
    const speed = 100;
    const textElement = document.getElementById("text");

    function typeEffect() {
      if (i < messages.length) {
        if (!isDeleting && j <= messages[i].length) {
          currentMessage = messages[i].substring(0, j++);
        } else if (isDeleting && j >= 0) {
          currentMessage = messages[i].substring(0, j--);
        }

        textElement.textContent = currentMessage;

        if (!isDeleting && j === messages[i].length + 1) {
          isDeleting = true;
          setTimeout(typeEffect, 1500); // delay tr∆∞·ªõc khi xo√°
          return;
        } else if (isDeleting && j === -1) {
          isDeleting = false;
          i++;
          if (i === messages.length) i = 0; // l·∫∑p l·∫°i t·ª´ ƒë·∫ßu
        }
      }
      setTimeout(typeEffect, isDeleting ? speed / 2 : speed);
    }
    typeEffect();

    // T·∫°o tim r∆°i
    function createHeart() {
      const heart = document.createElement("div");
      heart.innerHTML = "‚ù§Ô∏è";
      heart.classList.add("heart");
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.animationDuration = (3 + Math.random() * 5) + "s";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 8000);
    }
    setInterval(createHeart, 500);
  </script>
